{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "strict": true,
    "sourceMap": false,
    "inlineSources": false,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./",
    "types": ["jest"],
    "outDir": "dist/"
  },
  "include": ["*.ts"],
  "exclude": [
    "node_modules/",
    "jest.config.ts"
  ]
}

{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["jest"],
    "outDir": "dist/"
  },
  "exclude": [
    "node_modules/",
    "src/generated/"
  ]
}

{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "strict": true,
    "sourceMap": false,
    "inlineSources": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "types": ["jest"],
    "outDir": "dist/"
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules/",
    "jest.config.ts"
  ]
}
